.delete-form {
    display: inline;
    margin-left: 0.5rem;
}

.delete-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.7rem 1.3rem;
    background-color: #ffebee;
    color: #d32f2f;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
    font-size: 1rem;
}

.delete-btn:hover {
    background-color: #ffcdd2;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.delete-btn i {
    margin-right: 8px;
}